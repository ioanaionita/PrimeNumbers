@model PrimeNumbers.Models.Primes
@{
    ViewBag.Title = "New number";
}

<div class="text-center">
    <h5>Please enter a number:</h5>
</div>

<form method="post" action="/Home/Form">
    <div class="d-md-flex">
        <div class="form-group">
            @Html.TextBox("Length", null, new { @class = "form-control", required = "required", placeholder = "Enter a number" })
            @Html.ValidationMessageFor(model => model.Length, null, new { @class = "", @style = "background-color: red; color:white" })
        </div>
        <div class="form-group ml-md-4">
            <input type="submit" value="Submit" class="btn btn-secondary py-3 px-4">
        </div>
    </div>
</form>

